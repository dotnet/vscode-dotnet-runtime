// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run .NET Runtime Acquisition Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "compile-all"
        },
        {
            "name": ".NET Runtime Extension Functional Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                // Can't use --disable-extensions here if you want to debug from within VS Code, since it needs to be launched from within the same vscode instance to do so
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/dist/test/functional"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/test/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "compile-all"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Acquisition Library Unit Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--no-timeout",
                "--colors",
                "${workspaceFolder}/../vscode-dotnet-runtime-library/dist/test/unit/**.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "compile-all"
        }
    ]
}